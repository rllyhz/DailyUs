<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultLightText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultRegularText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultMediumText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashTextStyle" parent="DefaultMediumText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/my_purple_500</item>
    </style>

    <style name="OnBoardingAppNameTextStyle" parent="DefaultMediumText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/my_orange</item>
    </style>

    <style name="OnBoardingHeadlineTextStyle" parent="DefaultMediumText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/my_purple_700</item>
    </style>

    <style name="TitleTextStyle" parent="DefaultMediumText">
        <item name="android:textColor">@color/my_purple_700</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditTextStyle" parent="DefaultRegularText">
        <item name="android:textColorHint">@color/my_purple_200</item>
        <item name="android:textColor">@color/my_purple_700</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeGreetingUserTextStyle" parent="DefaultRegularText">

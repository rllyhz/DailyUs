<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashProgressBarStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/my_purple_200</item>
    </style>

    <style name="ButtonProgressBarStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/my_orange</item>
        <item name="android:padding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/my_orange</item>
        <item name="android:padding">16dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/my_orange</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/bg_bottom_nav_main</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="showText">false</item>
    </style>
</resources>